{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "ignoreChanges": ["CHANGELOG.md", "**/__tests__/**"],
  "ignore": ["packages/websites"],
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    }
  },
  "lifecycle": {
    "version": "npm run build"
  }
}
